{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON schema for user modify response",
  "type": "object",
  "properties": {
    "success": {
      "type": "boolean"
    },
    "user": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "email",
        "name"
      ]
    }
  },
  "required": [
    "success",
    "user"
  ]
}